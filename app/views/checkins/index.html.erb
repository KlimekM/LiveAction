<% if @place %>
<h1>Check-ins for <%= @place.name %></h1>

<div>
  <h3><%= @place.name %></h3>
  <p>Description: <%= @place.description %></p>
  <p>Address: <%= @place.address %></p>
  <p>Capacity: <%= @place.capacity %></p>
</div>

<% @checkins.each do |checkin| %>
  <div>
    <%= render "like", checkin: checkin %>
    <h3><%= link_to checkin.user.username, user_path(checkin.user) %> checked in on <%= checkin.date_attended %></h3>
    <h3>Description: <%= checkin.description %></h3>
  </div>
<% end %>

<h2><%= link_to "Check-in!", new_place_checkin_path(@place) %><h2>
<% else %>
  <%= flash[:notice] %>
<% end %>