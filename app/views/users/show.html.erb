<!-- Change logic in user methods -->
<div>
  <h2><%= @user.username %></h2>
  <% if logged_in? && current_user.own_profile?(@user) %>
    <%= link_to "Edit Profile", edit_user_path(@user) %>
  <% end %>

  <% if logged_in? && !current_user.own_profile?(@user) && current_user.already_friends?(@user) %>
    <%= link_to "Remove Friend", friendship_path(id: @user.id), method: :delete %>
  <% elsif logged_in? && !current_user.own_profile?(@user) %>
    <%= link_to "Add Friend", friendships_path(id: @user.id), method: :post %>
  <% end %>

  <div>
    <h2>Friends</h2>
    <% @user.friends.each do |friend| %>
      <%= link_to friend.username, user_path(friend) %>
    <% end %>
  </div>
</div>

<h3>User checkins:</h3>
<% @user.checkins.each do |checkin| %>
  <h4><%= link_to checkin.place.name, "/places/#{checkin.place.id}/checkins/#{checkin.id}" %></h4>
  <p>Checked in on: <%= checkin.date_attended %></p>
  <p>Checkin description: <%= checkin.description %></p>
<% end %>
