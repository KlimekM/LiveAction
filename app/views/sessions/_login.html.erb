<% if flash[:notice] %>
  <div class="flash-notice"><%= flash[:notice] %></div>
<% end %>

<%= form_for :user, url: login_path, :html => {:class => "user-form"} do |f| %>
  <%= f.text_field :username, placeholder: "Username" %>

  <%= f.password_field :password, placeholder: "Password" %>

  <%= f.submit "Sign In" %>
<% end %>